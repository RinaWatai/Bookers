<h2>Editing Book</h2>

<%= form_with model: @book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
    <div class ="action">
  <%= f.submit 'Update Book' %>
  
  <div class ="action">
  <span><%= link_to "Show", book_path(@book.id) %></span>
  
  <span><%= link_to "Back", "/books" %></span>
  </div>
<% end %>